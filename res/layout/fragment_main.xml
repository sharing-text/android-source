<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imageButtonRefreshIPs"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/textviewserver" />

        <TextView
            android:id="@+id/textViewLocal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewServer"
            android:layout_toLeftOf="@+id/imageButtonRefreshIPs"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/textviewlocal" />

        <ImageButton
            android:id="@+id/imageButtonRefreshIPs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_back"
            android:onClick="updateIP"
            android:src="@drawable/ic_action_refresh" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativetextcontainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/editTextReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ems="10"
            android:hint="@string/edittext_msg"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:selectAllOnFocus="true" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <android.support.v7.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            android:contentDescription="@string/btn_action_send"
            android:onClick="sendText"
            android:src="@drawable/ic_action_send" />

        <android.support.v7.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonClear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            android:contentDescription="@string/btn_action_clear"
            android:onClick="clearText"
            android:src="@drawable/ic_action_delete" />

        <android.support.v7.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonCon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            android:contentDescription="@string/btn_action_connection"
            android:onClick="setConnection"
            android:src="@drawable/ic_action_disconnected" />

        <android.support.v7.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/buttonCopy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            android:contentDescription="@string/btn_action_copy"
            android:onClick="copyText"
            android:src="@drawable/ic_action_copy" />

        <android.support.v7.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>